<Page x:Class="NewKapcha.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NewKapcha.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Content="Вход"/>
        <StackPanel Orientation="Horizontal">
            <Label Content="Логин" Width="100"/>
            <TextBox x:Name="LoginBox" Width="150"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Пароль" Width="100"/>
            <PasswordBox x:Name="PasswordBox" Width="150"/>
        </StackPanel>
        <Button Content="Вход" x:Name="LoginBTN" Click="LoginBTN_Click"/>
    </StackPanel>
</Page>
